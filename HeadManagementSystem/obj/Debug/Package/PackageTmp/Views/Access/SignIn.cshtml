@model HeadManagementSystem.Models.LoginModel
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>HMS | Đăng nhập</title>
    <!-- Favicon-->
    <link rel="icon" href="../../favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/Scripts/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <!-- Waves Effect Css -->
    <link href="~/Scripts/plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/Scripts/plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- Custom Css --> 
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);">GPRO<b>HMS</b></a>
            <small>Head Management System</small>
        </div>
        <div class="card">
            <div class="body">
                @using (Html.BeginForm("SignIn", "Access", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "frmLogin" }))
                {
                    <div class="msg">Đăng nhập hệ thống</div>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "red-text", @style = "padding: 5px 0;" })

                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">person</i>
                        </span>
                        <div class="form-line">
                            @*<input type="text" class="form-control" name="username"  required autofocus>*@
                            @Html.EditorFor(m => m.LoginName, new { htmlAttributes = new { @id = "taikhoan", @required = "", @class = "form-control", @placeholder = "Tài khoản" } })
                            @Html.ValidationMessageFor(x => x.LoginName)
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            @*<input type="password" class="form-control" name="password" placeholder="Mật khẩu" required>*@
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @id = "password", @required = "", @class = "form-control", @type = "password", @placeholder = "Mật khẩu" } })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8 p-t-5">
                            @*<input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-pink">
                    <label for="rememberme">Remember Me</label>*@
                        </div>
                        <div class="col-xs-4">
                            <button class="btn btn-block bg-pink waves-effect" type="submit">ĐĂNG NHẬP</button>
                        </div>
                    </div>
                    @*<div class="row m-t-15 m-b--20">
                <div class="col-xs-6">
                    <a href="sign-up.html">Register Now!</a>
                </div>
                <div class="col-xs-6 align-right">
                    <a href="forgot-password.html">Quên mật khẩu?</a>
                </div>
            </div>*@ 
                } 
            </div>
        </div> 
    </div>
    <!-- Jquery Core Js -->
    <script src="~/Scripts/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="~/Scripts/plugins/bootstrap/js/bootstrap.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="~/Scripts/plugins/node-waves/waves.js"></script>
    <!-- Validation Plugin Js -->
    <script src="~/Scripts/plugins/jquery-validation/jquery.validate.js"></script>
    <!-- Custom Js -->
    <script src="~/Scripts/js/admin.js"></script>
    <script src="~/Scripts/js/sign-in.js"></script> 
</body>
</html>