@model List<HMS.Data.Model.PhieuMoModel>
@{
    ViewBag.Title = "Phiếu đóng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row clearfix">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="header bg-teal">
                <div class="row clearfix">
                    <div class="col-xs-12 col-sm-6">
                        <h2>Phiếu đóng | <span class="col-yellow bold">@Model.Count</span> phiếu</h2>
                    </div>
                </div>
            </div>
            <div class="body  ">
                <div class="table-responsive">
                    <table id="table-phieu-dong" class="table table-bordered table-striped table-hover dataTable ">
                        <thead>
                            <tr>
                                <th class="col-md-1 col-xs-1 col-sm-1 col-lg-1">Số phiếu</th>
                                <th class="col-md-1 col-xs-1 col-sm-1 col-lg-1">Thông tin khách hàng</th>
                                <th class="col-md-1 col-xs-1 col-sm-1 col-lg-1">Thông tin xe</th>
                                <th class="col-md-1 col-xs-1 col-sm-1 col-lg-1">Giá nhập</th>
                                <th class="col-md-1 col-xs-1 col-sm-1 col-lg-1">Số lượng phụ tùng</th>
                                <th class="col-md-1 col-xs-1 col-sm-1 col-lg-1">Tổng tiền phụ tùng</th>
                                <th class="col-md-1 col-xs-1 col-sm-1 col-lg-1">Tiền công</th>
                                <th class="col-md-1 col-xs-1 col-sm-1 col-lg-1">Tồng tiền</th>
                                <th class="col-md-2 col-xs-2 col-sm-2 col-lg-2">Yêu cầu khách hàng</th>
                                <th class="col-md-1 col-xs-1 col-sm-1 col-lg-1">Ngày tạo phiếu</th>
                                <th class="col-md-1 col-xs-1 col-sm-1 col-lg-1">Ngày đóng phiếu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="/Receipt/detail?id=@item.Id"> @item.SoPhieu</a>
                                        <button class="btn-primary"><i class="fa fa-print"></i> In phiếu</button>
                                    </td>
                                    <td>
                                        <div><a href="/khachhang/detail?id=@item.KHId"> @item.MaKH</a></div>
                                        <div>@item.KHTen</div>
                                        <div>@item.KHDThoai</div>
                                    </td>
                                    <td>
                                        <div>@item.Model</div>
                                        <div>@item.SoKhung</div>
                                        <div>@item.SoMay</div>
                                        <div>@item.BienSo</div>
                                    </td>
                                    <td>@item.TongGiaNhap</td>
                                    <td>@item.SLPhuTung</td>
                                    <td>@item.TongGiaBan</td>
                                    <td>@item.TienCong</td>
                                    <td>@item.TongTien</td>
                                    <td>@item.Yeucau</td>
                                    <td>@item.Ngay.ToString("dd/MM/yyyy h:mm tt")</td>
                                    <td>@item.NgayDong.Value.ToString("dd/MM/yyyy h:mm tt")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>                 
            </div>
        </div>
    </div>
</div>
<script>
    createDatatable('table-phieu-dong', false, false);
</script>

