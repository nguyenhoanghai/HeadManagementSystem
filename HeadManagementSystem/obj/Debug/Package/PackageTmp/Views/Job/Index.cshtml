
@{
    ViewBag.Title = "Nghề nghiệp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="header bg-teal">
        <div class="row clearfix">
            <div class="col-xs-12 col-sm-6">
                <h2 class="upper-text">danh mục nghề nghiệp</h2>
            </div>
        </div>
    </div>
    <div class="body clearfix ">
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 m-b-10 padding-0">
            <div class="add-box-title">Thông tin nghề nghiệp</div>
            <div class="add-box-body">
                <div class="col-xs-12 col-sm-3 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="name">
                            <label class="form-label">Tên</label>
                        </div>
                        <div class="err-name"></div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-5 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <textarea rows="1" class="form-control no-resize auto-growth" id="note"></textarea>
                            <label class="form-label">Ghi chú</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-12 col-lg-12 align-right">
                    <button class="btn btn-danger m-b-5 m-t-5" id="btAdd"><i class="fa fa-plus-circle"></i> Thêm mới</button>
                    <button class="btn btn-primary m-b-5 m-t-5" id="btSave"><i class="fa fa-save"></i> Cập nhật</button>
                    <button class="btn btn-default m-b-5 m-t-5" id="btCancel"><i class="fa fa-ban col-red"></i> Hủy bỏ</button>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 m-b-10 padding-0">
            <div style="padding:10px;border:1px solid #ccc; border-bottom:2px solid #009688">Danh sách nghề nghiệp</div>
            <div style="padding:10px;border:1px solid #ccc; border-top:none">
                <div class="table-responsive">
                    <table id="job-table" class="table table-bordered table-striped table-hover dataTable job-table">  </table>
                </div>
            </div>
        </div>



    </div>
</div>
 
<script src="~/Scripts/HMS/job-index.js"></script>
<script>
    var obj = new HMS.Job();
    obj.Init();

    function Edit(id) {
        obj.Edit(id);
    }

    function Delete(id) {
        obj.Delete(id);
    }
</script>

