@using HMS.Data.Model
@{
    ViewBag.Title = "Khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var jobs = ViewBag.Jobs as List<ModelSelectItem>;
}

<div class="card">
    <div class="header bg-teal">
        <div class="row clearfix">
            <div class="col-xs-12 col-sm-6">
                <h2 class="upper-text">danh mục khách hàng</h2>
            </div>
        </div>
    </div>
    <div class="body clearfix ">
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 m-b-10 padding-0">
            <div class="add-box-title">Thông tin khách hàng</div>
            <div class="add-box-body masked-input">
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="code">
                            <label class="form-label">Mã khách hàng</label>
                        </div>
                        <div class="err-code"></div>
                    </div>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <button disabled class="btn btn-primary m-b-5 m-t-5 ">Tìm kiếm</button>
                    </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="name">
                            <label class="form-label">Tên khách hàng</label>
                        </div>
                        <div class="err-name"></div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control date  " id="ngaysinh">
                            <label class="form-label">Ngày sinh</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <select class="form-control show-tick" id="gioitinh" data-live-search="true">
                                <option value="1">Nam</option>
                                <option value="0">Nữ</option>
                            </select>
                            <label class="form-label">Giới tính</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="phone">
                            <label class="form-label">Số điện thoại</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <select class="form-control show-tick" data-live-search="true" id="tinh-thanhpho"></select>
                            <label class="form-label">Tỉnh/Thành phố</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <select class="form-control show-tick" data-live-search="true" id="quan-huyen"></select>
                            <label class="form-label">Quận/Huyện</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="phuong">
                            <label class="form-label">Phường</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <select class="form-control show-tick" data-live-search="true" id="jobid">
                                @if (jobs != null)
                                {
                                    for (int i = 0; i < jobs.Count; i++)
                                    {
                                        <option value="@jobs[i].Id" >@jobs[i].Code</option>
                                    }
                                }
                            </select>
                            <label class="form-label">Nghề nghiệp</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <textarea rows="1" class="form-control no-resize auto-growth" id="address"></textarea>
                            <label class="form-label">Địa chỉ</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <textarea rows="1" class="form-control no-resize auto-growth" id="note"></textarea>
                            <label class="form-label">Ghi chú</label>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 align-right">
                    <button class="btn btn-danger m-b-5 m-t-5" id="btAdd"><i class="fa fa-plus-circle"></i> Thêm mới</button>
                    <button class="btn btn-primary m-b-5 m-t-5" id="btSave"><i class="fa fa-save"></i> Cập nhật</button>
                    <button class="btn btn-default m-b-5 m-t-5" id="btCancel"><i class="fa fa-ban col-red"></i> Hủy bỏ</button>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 m-b-10 padding-0">
            <div class="grid-box-title">Danh sách khách hàng</div>
            <div class="grid-box-body">
                <div class="table-responsive">
                    <table id="kh-table" class="table table-bordered table-striped table-hover dataTable kh-table">  </table>
                </div>
            </div>
        </div>
    </div>
</div>
