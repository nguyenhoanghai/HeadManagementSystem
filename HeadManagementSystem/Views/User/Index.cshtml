@using HMS.Data.Model
@{
    ViewBag.Title = "Nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var loaiNVs = (List<ModelSelectItem>)ViewBag.loaiNV;
}
<link href="~/Content/HMS/user-index.css" rel="stylesheet" />
<div class="card">
    <div class="header bg-teal">
        <div class="row clearfix">
            <div class="col-xs-12 col-sm-6">
                <h2>NHÂN VIÊN</h2>
            </div>
        </div>
    </div>
    <div class="body clearfix ">
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 m-b-10 padding-0">
            <div class="add-box-title">Thông tin nhân viên</div>
            <div class="add-box-body">
                <div class="col-xs-12 col-sm-4 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <select class="form-control show-tick" data-live-search="true" id="user-type" title="Chọn loại nhân viên">
                                <option value=""></option>
                                @if (loaiNVs != null)
                                {
                                    for (int i = 0; i < loaiNVs.Count; i++)
                                    {
                                        <option value="@loaiNVs[i].Id">@loaiNVs[i].Name</option>
                                    }
                                }
                            </select>
                            <label class="form-label">Loại nhân viên</label>
                        </div>
                        <div class="err-user-type"></div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="code" disabled />
                            <label class="form-label">Mã nhân viên</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="name" />
                            <label class="form-label">Tên nhân viên</label>
                        </div>
                        <div class="err-name"></div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="phone" />
                            <label class="form-label">Điện thoại</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="address" />
                            <label class="form-label">Địa chỉ</label>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-4 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <textarea rows="1" class="form-control no-resize auto-growth" id="note"></textarea>
                            <label class="form-label">Ghi chú</label>
                        </div>
                    </div>
                </div>

                <div style="margin: 12px;  border-bottom: 2px solid #009688; font-weight: 600;">Thông tin tài khoản hệ thống</div>
                <div class="col-xs-12 col-sm-4 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="text" class="form-control" id="acc" />
                            <label class="form-label">Tên tài khoản</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 col-md-12 col-lg-12">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input type="password" class="form-control" id="pass" />
                            <label class="form-label">Mật khẩu</label>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 align-right">
                    <button class="btn btn-danger m-b-5 m-t-5" id="btAdd"><i class="fa fa-plus-circle"></i> Thêm mới</button>
                    <button class="btn btn-primary m-b-5 m-t-5" id="btSave"><i class="fa fa-save"></i> Cập nhật</button>
                    <button class="btn btn-default m-b-5 m-t-5" id="btCancel"><i class="fa fa-ban col-red"></i> Hủy bỏ</button>
                </div>
                <div class="line"></div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 align-right">

                    <button class="btn btn-primary m-b-5 m-t-5" id="btnhap-excel"><i class="fa fa-file-excel-o"></i> Nhập nhân viên từ file excel</button><br />
                    <input type="file" style="display:none" name="filemau" id="file-mau" />
                    <a href="/Excel_Template/nhan-vien.xlsx">Tải file mẫu</a>
                    <br />
                    <span class="err-msg up-err"></span>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 m-b-10 padding-0">
            <div class="grid-box-title">Danh sách nhân viên</div>
            <div class="grid-box-body">
                <div class="table-responsive">
                    <table id="user-table" class="table table-bordered table-striped table-hover dataTable user-table">  </table>
                </div>
            </div>
        </div>



    </div>
</div>

<script src="~/Scripts/HMS/user-index.js"></script>
<script>
    var user = new HMS.User();
    user.Init();

    function Edit(id) {
        user.Edit(id);
    }

    function Delete(id) {
        user.Delete(id);
    }
</script>